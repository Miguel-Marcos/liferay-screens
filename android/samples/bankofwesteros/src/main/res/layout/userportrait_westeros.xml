<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.bankofwesteros.views.UserPortraitView xmlns:android="http://schemas.android.com/apk/res/android"
																  android:layout_width="match_parent"
																  android:layout_height="match_parent"
																  android:padding="10dp">

	<ImageView
		android:id="@+id/portrait_image"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:contentDescription="@string/user_portrait"
		android:gravity="center_vertical|center_horizontal"
		android:scaleType="fitXY"
		android:src="@drawable/default_portrait_placeholder"/>

	<ImageButton
		android:visibility="invisible"
		android:background="@android:color/transparent"
		android:id="@+id/replace_portrait_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|right"
		android:src="@drawable/circle_add"/>

	<ProgressBar
		android:id="@+id/portrait_progress"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:visibility="invisible"/>


</com.liferay.mobile.screens.bankofwesteros.views.UserPortraitView>