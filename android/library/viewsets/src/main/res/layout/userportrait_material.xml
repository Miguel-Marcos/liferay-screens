<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.material.userportrait.UserPortraitView xmlns:android="http://schemas.android.com/apk/res/android"
																			android:layout_width="match_parent"
																			android:padding="10dp"
																			android:layout_height="match_parent">

	<ImageView
		android:scaleType="fitXY"
		android:contentDescription="@string/user_portrait"
		android:id="@+id/portrait_image"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center_vertical|center_horizontal"
		android:src="@drawable/default_portrait_placeholder"/>

	<ImageButton
		android:visibility="invisible"
		android:id="@+id/replace_portrait_image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|right"
		android:src="@drawable/material_tinted_add"/>

	<ProgressBar
		android:layout_gravity="center"
		android:id="@+id/portrait_progress"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:visibility="invisible"/>


</com.liferay.mobile.screens.viewsets.material.userportrait.UserPortraitView>